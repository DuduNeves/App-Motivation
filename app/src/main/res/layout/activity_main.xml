<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:id="@+id/cabecalho"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/purple">

    <ImageView
        android:id="@+id/imageAll"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/ic_all" />

        <ImageView
            android:id="@+id/imageHappy"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/ic_happy" />

    <ImageView
        android:id="@+id/imageMorning"
         android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/ic_sun" />


    </LinearLayout>

    <TextView
        android:id="@+id/texteName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cabecalho"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="16sp"
        android:text="OlÃ¡,"/>

    <TextView
        android:id="@+id/textPhrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_margin="20dp"
        android:textSize="16sp"
        android:gravity="center"
        android:text="Frase"/>

    <View
        android:layout_below="@+id/textPhrase"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:background="@color/purple"
        />


    <Button
        android:id="@+id/buttonNewFrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="NOVA FRASE"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ripple_button"
        android:padding="15dp"/>
</RelativeLayout>